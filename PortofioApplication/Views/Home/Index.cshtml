@model PortofioApplication.Models.ViewModels.PortfolioViewModel

<section id="home" class="hero section">
    <div class="container">
        <div class="row align-items-center">

            @foreach (var p in Model.Profiles!)
            {
                <div class="col-md-7" data-aos="fade-right">
                    <h1 class="hero-title">@p.Name</h1>
                    <p class="hero-subtitle">@p.Title</p>
                    <p>@p.Summary</p>

                    <a href="#projects" class="btn btn-dark mt-3 me-2">View Projects</a>
                    <a href="@p.GitHub" target="_blank" class="btn btn-outline-light mt-3">GitHub</a>
                </div>
            }

            <div class="col-md-5" data-aos="fade-left">
                <div class="card p-4 text-center">
                    <h3>Software Engineer</h3>
                    <p>ASP.NET MVC • Web API • SQL</p>
                </div>
            </div>

        </div>
    </div>
</section>

<section id="skills" class="section">
    <div class="container">
        <h2 class="text-center mb-5">Skills</h2>

        <div class="row">
            @foreach (var s in Model.Skills!)
            {
                <div class="col-md-3 mb-4" data-aos="zoom-in">
                    <div class="card skill-card text-center p-3">
                        <h6>@s.SkillName</h6>
                        <span>@s.SkillLevel</span>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section id="experience" class="section">
    <div class="container">
        <h2 class="text-center mb-5">Experience</h2>

        @foreach (var e in Model.Experiences!)
        {
            <div class="card mb-4" data-aos="fade-up">
                <div class="card-body">
                    <h5>@e.Role</h5>
                    <h6>@e.Company</h6>
                    <p>@e.Description</p>
                </div>
            </div>
        }
    </div>
</section>

<section id="projects" class="section">
    <div class="container">
        <h2 class="text-center mb-5">Projects</h2>

        <div class="row">
            @foreach (var pr in Model.Projects!)
            {
                <div class="col-md-4 mb-4" data-aos="flip-left">
                    <div class="card project-card p-3">
                        <h5>@pr.Title</h5>
                        <p>@pr.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section id="contact" class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">

                <div class="contact-card">
                    <h3 class="mb-3">Let’s talk</h3>
                    <p class="text-muted mb-4">
                        Tell me about your project or opportunity.
                    </p>

                    <form id="contactForm" method="post" action="/Home/Contact">
                        <input class="form-control mb-3" name="Name" placeholder="Your name" required />
                        <input class="form-control mb-3" name="Email" placeholder="Email address" required />
                        <textarea class="form-control mb-4" rows="4" name="Message" placeholder="Message"></textarea>

                        <button class="btn btn-primary w-100">Send message</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>



<footer class="text-center py-4">
    <small>© 2026 Pranesh Dharshan • Full Stack Developer</small>
</footer>


<script>
    document.getElementById("contactForm").addEventListener("submit",function(e){
    e.preventDefault();
    Swal.fire({
    title:"Send Message?",
    icon: "warning",
    showCancelButton:true
    }).then(r=>{
    if(r.isConfirmed)e.target.submit();
    });
    });
</script>
